<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Beranda</a></li>
            <li class="breadcrumb-item"><a href="/Bank">Bank</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Tambah Bank</h3>
            </div>

            <!-- form -->
            <form
              action="/bank/create"
              method="post"
            >
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama Pemilik</label>
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                    placeholder="Masukan Nama Pemilik"
                    required
                  />
                </div>

                <div class="form-group">
                  <label for="nameBank">Nama Bank</label>
                  <select class="select2 form-control" name="nameBank" required>
                    <option value="" selected disabled>Pilih Nama Bank</option>
                    <option value="BRI">BRI</option>
                    <option value="BCA">BCA</option>
                    <option value="MANDIRI">MANDIRI</option>
                    <option value="BNI">BNI</option>
                    <option value="DANAMON">DANAMON</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="noRekening">No Rekening</label>
                  <input
                    type="number"
                    class="form-control"
                    id="noRekening"
                    name="noRekening"
                    placeholder="Masukan Nomor Rekening"
                    required
                  />
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
            <!-- /form -->
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
