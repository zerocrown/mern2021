<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Kategori</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Beranda</a></li>
            <li class="breadcrumb-item"><a href="/category">Kategori</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Tambah kategori</h3>
            </div>

            <!-- form -->
            <form action="/nominal/create" method="post">
              <div class="card-body">
                <!--  -->
                <div class="form-group">
                  <label>Nama Coin</label>
                  <select
                    name="coinName"
                    class="form-control select2 "
                    style="width: 100%"
                  >
                    <option disabled selected>Pilih Coin</option>
                    <option value="diamond">Diamond</option>
                    <option value="gold">Gold</option>
                    <option value="jewel">Jewel</option>
                    <option value="silver">Silver</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Masukan Jumlah Coin</label>
                  <input
                    type="number"
                    class="form-control"
                    id="coinQuantity"
                    name="coinQuantity"
                    placeholder="Masukan Jumlah Coin"
                  />
                </div>
                <div class="form-group">
                  <label for="coinPrice">Masukan Harga Coin</label>
                  <input
                    type="number"
                    class="form-control"
                    id="coinPrice"
                    name="coinPrice"
                    placeholder="Masukan Harga Coin"
                  />
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
            <!-- /form -->
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
