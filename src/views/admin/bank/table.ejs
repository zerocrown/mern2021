<table id="example2" class="table table-bordered table-hover">
  <!-- head -->
  <thead>
    <tr>
      <th>No</th>
      <th>Nama Pemilik</th>
      <th>Nama Bank</th>
      <th>Nomor Rekening</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% data.forEach((data, index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= data.name %></td>
      <td><%= data.nameBank %></td>
      <td><%= data.noRekening %></td>
      

      <!-- action -->
      <td>
        <form action="/bank/delete/<%= data._id %>?_method=DELETE" method="post" class="d-inline-block">
          <a href=<%- "/bank/edit/" + data._id %> class="btn btn-warning btn-sm
">
            <i class="fas fa-pencil-alt"></i>
            Edit</a>
          <button class="btn btn-danger btn-sm" type="submit">
            <i class="fas fa-trash"></i> Hapus
          </button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>